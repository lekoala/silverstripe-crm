{
    "name": "lekoala/silverstripe-crm",
    "description": "CRM module for Silverstripe",
    "type": "silverstripe-module",
    "homepage": "https://github.com/lekoala/silverstripe-crm",
    "keywords": [
        "silverstripe",
        "crm"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "LeKoala",
            "email": "thomas@lekoala.be"
        }
    ],
    "support": {
        "issues": "https://github.com/lekoala/silverstripe-crm/issues"
    },
    "require": {
        "php": ">=8.2",
        "silverstripe/framework": "^5.3",
        "silverstripe/admin": "^5.3",
        "symbiote/silverstripe-gridfieldextensions": "^4.1",
        "lekoala/silverstripe-cms-actions": "^1.7",
        "lekoala/silverstripe-phonenumber": "*",
        "dragonbe/vies": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "LeKoala\\Crm\\": "src/",
            "LeKoala\\Crm\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phpcs src/ tests/",
        "lint-clean": "phpcbf src/ tests/"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
